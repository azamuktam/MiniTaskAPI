{
  "name": "app/mini-task-api",
  "description": "A pure PHP Mini Task API with a layered architecture.",
  "type": "project",
  "require": {
    "php": "^8.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Core\\": "app/Core/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^13.0"
  }
}
